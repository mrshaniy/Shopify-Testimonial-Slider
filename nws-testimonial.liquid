.nws-testimonial.nws-same-padding {
    padding-top: 80px;
    padding-bottom: 80px;
}
.nws-custom-container {
    width: 100%;
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 10px;
    display: block;
}
.nws-testimonial .nws-custom-row {
    margin-top: 40px;
}
.nws-testimonial-inner {
    border: 1px solid #e8e8e8;
    padding: 30px;
    border-radius: 5px;
    height: 100%;
}
.nws-section-header {
    text-align: center;
}
.section-title {
    font-size: 36px;
    color: #000;
    font-family: Barlow Condensed,sans-serif;
    font-weight: 600;
    line-height: 1.3;
    margin-top: 0;
    margin-bottom: 0;
    display: block;
}
.section-desc {
    font-size: 18px;
    font-family: Barlow Condensed,sans-serif;
    color: #000;
    line-height: 1.3;
    display: block;
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
}
.nws-testimonial-title {
    color: #242424;
    font-size: 32px;
    line-height: normal;
    font-family: sans-serif;
    font-weight: 500;
    margin-top: 0;
    margin-bottom: 0;
    display: block;
}
.nws-review-star {
    margin-top: 8px;
}
.nws-review-star i {
    color: #ffd600;
    font-size: 18px;
    margin-right: 5px;
}
.nws-testimonial-content {
    font-size: 18px;
    color: #363636;
    font-family: sans-serif;
    margin-top: 30px;
    margin-bottom: 0;
    display: block;
    line-height: 1.3;
}
.nws-testimonial-content p {
    margin-top: 0;
    margin-bottom: 0;
}
.nws-testimonial-footer img {
    width: 90px;
    height: 90px;
    object-fit: cover;
    object-position: top;
    border-radius: 100%;
    margin-right: 8px;
}
.nws-testimonial-footer h5 {
    font-size: 16px;
    color: #000;
    font-weight: 600;
    font-family: sans-serif;
    margin-top: 0;
    margin-bottom: 0;
}
.nws-verify span {
    color: #787878;
    font-size: 14px;
    margin-left: 7px;
    margin-top: 0;
    margin-bottom: 0;
}
.nws-verify {
    display: flex;
    align-items: center;
    margin-top: 8px;
}
.nws-testimonial-footer {
    display: flex;
    align-items: center;
    margin-top: 12px;
}
.nws-testimonial .slick-slide {
    padding: 0 10px;
}
.nws-testimonial .slick-dots li button:before {
    display: none !important;
}
.nws-testimonial .slick-dots li button {
    width: 32px;
    height: 4px;
    border-radius: 10px;
    background-color: #242424;
    opacity: .2;
    display: inline-block;
    padding: 0;
}
.nws-testimonial .slick-dots li.slick-active button {
    opacity: 1;
}
.nws-testimonial .slick-dots li {
    margin: 0 10px 0 0;
    width: auto !important;
}
.nws-section-btn {
    color: #fff;
    background: #000;
    border: 1px solid #000;
    font-size: 18px;
    font-weight: 500;
    font-family: Barlow Condensed,sans-serif;
    padding: 14px 10px;
    width: 100%;
    max-width: 200px;
    display: block;
    text-align: center;
    text-decoration: none;
    border-radius: 4px;
    margin: 50px auto auto;
    transition: .2s ease-in-out;
}
.nws-section-btn:hover {
    background: transparent;
    color: #000;
}